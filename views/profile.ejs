<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <h1>Welcome, <%= userName %>!</h1>
        <nav>
            <a href="/" class="nav-link">Home</a>
            <a href="/user/logout" class="nav-link">Logout</a>
        </nav>
    </header>

    <main>
        <section class="profile-section">
            <h2>Account Details</h2>
            <p><strong>Name:</strong>
                <%= user.firstName %>
                    <%= user.lastName %>
            </p>
            <p><strong>Email:</strong>
                <%= user.email %>
            </p>
            <p><strong>Apartment:</strong>
                <%= user.apartmentNumber %>
            </p>
            <p><strong>Registered On:</strong>
                <%= new Date(user.registrationDate).toLocaleDateString() %>
            </p>
        </section>

        <section class="records-section">
            <h2>Your Water Meter Records</h2>
            <% if (records.length> 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Reading Date</th>
                            <th>Water Usage (mÂ³)</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% records.forEach(record=> { %>
                            <tr>
                                <td>
                                    <%= new Date(record.reading_date).toLocaleDateString() %>
                                </td>
                                <td>
                                    <%= record.water_usage %>
                                </td>
                                <td>
                                    <%= record.notes || 'N/A' %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <p>No records found. Start recording your water usage!</p>
                    <% } %>
        </section>
    </main>
</body>

</html>